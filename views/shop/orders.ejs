<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
            <main>
                <% if (orders.length <=0) { %>
                    <h1>Nothing here!</h1>
                    <% } else { %>
                        <ul>
                            <% orders.forEach(order=> { %>
                                <li>
                                    <h1>#
                                        <%= order._id %>
                                    </h1>
                                    <p>Order placed: <b>
                                            <%= formatTime.format(order.time).replace(",", " " ) %>
                                        </b>
                                    </p>
                                    <ul>
                                        <% order.products.forEach(p=> { %>
                                            <li>
                                                <%= p.product.title %> (
                                                    <%= p.quantity %>) $
                                                        <%= p.product.price * p.quantity %>
                                            </li>

                                            <% }); %>
                                                <li>Total: $<%= total(order.products) %>
                                                </li>
                                    </ul>
                                </li>
                                <% }); %>
                        </ul>
                        <% } %>
            </main>
            <%- include('../includes/end.ejs') %>